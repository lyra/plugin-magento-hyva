<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="checkout.quote-summary.section">
            <block name="checkout.summary-payzen_standard"
                   template="Lyranetwork_PayzenHyva::component/payment/method/standard.phtml"
                   class="Lyranetwork\PayzenHyva\Block\Checkout\Payment\Method\Standard"
                   after='checkout.shipping-summary'>
                <arguments>
                    <argument name="methodCode" xsi:type="string">payzen_standard</argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">Lyranetwork_Payzen/images/standard-logo.png</item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>